#:kivy 1.0.9
<RV>:
    viewclass: 'Label'
    orientation: 'vertical'
    spacing: 10
    padding: 10, 10
    space_x: self.size[0]/3

    RecycleBoxLayout:
        color: (0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 0.4, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"


<ScreenManagement>:
    StartScreen:
        id:page1

    ListyZakupow:
        id:page2

    MojaLodowa:
        id:page3

    Przepisy:
        id:page4    
    

<StartScreen>:
    name:'menu'
    
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1
        
            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        Image:
            source: 'lodowa.png'
            size_hint: 1, .9


<ListyZakupow>:
    name: 'ListyZakupow'
    on_enter: root.read()

    BoxLayout:
        orientation:'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1

            Button:
                text: 'Listy zakupów'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'
            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        ScrollView:
            size_hint: 1, .8
            Label:
                font_size: 35
                spacing: 20
                text:root.table
        
        Button:
            text:'Dodaj produkt'
            size_hint: .3, .1

<MojaLodowa>:
    name: 'MojaLodowa'

    BoxLayout:
        orientation: 'vertical'
        
        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1

            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        RV:
            id: recycle_view
            size_hint: 1, .9
                


<Przepisy>:
    name: 'Przepisy'

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1
        
            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'Przepisy'

        Button:
            text: 'Śniadanie'
            size_hint: 1, .225
            background_color: (0,0.8,0,0.8)

        Button:
            text: 'Lunch'
            size_hint: 1, .225
            background_color: (0,1.1,0,1.1)
        
        Button:
            text: 'Obiad'
            size_hint: 1, .225
            background_color: (0,0.8,0,0.8)

        Button:
            text: 'Kolacja'
            size_hint: 1, .225
            background_color: (0,1.1,0,1.1)
            