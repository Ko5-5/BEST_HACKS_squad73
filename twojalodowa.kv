<RV_Lodowa>:
    viewclass: 'Label'
    orientation: 'vertical'
    spacing: 10
    padding: 10, 10
    space_x: self.size[0]/3

    RecycleBoxLayout:
        color: (0, 0.7, 0.4, 0.8)
