#:kivy 1.0.9
<RV>:
    viewclass: 'Label'
    orientation: 'vertical'
    spacing: 10
    padding: 10, 10
    space_x: self.size[0]/3

    RecycleBoxLayout:
        color: (0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 0.4, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"

<RV2>:
    viewclass: 'Label'
    orientation: 'vertical'
    spacing: 10
    padding: 10, 10
    space_x: self.size[0]/3

    RecycleBoxLayout:
        color: (0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 0.4, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"

<ScreenManagement>:
    StartScreen:
        id:page1

    ListyZakupow:
        id:page2

    DodajProdukt:

    MojaLodowa:
        id:page3

    Przepisy:
        id:page4     
    

<StartScreen>:
    name:'menu'
    
    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1
        
            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        Image:
            source: 'lodowa.png'
            size_hint: 1, .9


<ListyZakupow>:
    name: 'ListyZakupow' 

    BoxLayout:
        orientation:'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1

            Button:
                text: 'Listy zakupów'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'
            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        RV2:
            id: recycle_view2
        
        Button:
            text:'Dodaj produkt'
            size_hint: .3, .1
            on_press: root.manager.current = 'DodajProdukt'

<DodajProdukt>:
    name: 'DodajProdukt'
    textinput: input
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 0.2
        pos: root.center_x - (1/2)*self.width, root.center_y - (1/2)*self.height
        TextInput:
            id: input
            font_size: 24
            multiline: False
            
        BoxLayout:
            orientation: 'horizontal' 
            Button:
                text: 'Dodaj produkt'
                on_press: root.new_score()
            Button:
                text: "Anuluj"
                on_press: root.manager.current = 'ListyZakupow'
                
<MojaLodowa>:
    name: 'MojaLodowa'
    on_enter: root.read()

    BoxLayout:
        orientation: 'vertical'
        
        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1

            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                on_press: root.manager.current = 'Przepisy'

        RV:
            size_hint: 1, .9
                


<Przepisy>:
    name: 'Przepisy'

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            rows: 1
            size_hint: 1, .1
        
            Button:
                text: 'Listy zakupów'
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'Przepisy'

        Button:
            text: 'Śniadanie'
            size_hint: 1, .225
            background_color: (0,0.8,0,0.8)

        Button:
            text: 'Lunch'
            size_hint: 1, .225
            background_color: (0,1.1,0,1.1)
        
        Button:
            text: 'Obiad'
            size_hint: 1, .225
            background_color: (0,0.8,0,0.8)

        Button:
            text: 'Kolacja'
            size_hint: 1, .225
            background_color: (0,1.1,0,1.1)
            