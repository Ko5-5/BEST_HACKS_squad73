#:kivy 1.0.9
<RV>:
    viewclass: 'Label'
    orientation: 'vertical'
    spacing: 10
    padding: 10, 10
    space_x: self.size[0]/3

    RecycleBoxLayout:
        color: (0, 0.7, 0.4, 0.8)
        default_size: None, dp(56)
        default_size_hint: 0.4, None
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"


<ScreenManagement>:
    StartScreen:
        id:page1

    ListyZakupow:
        id:page2

    MojaLodowa:
        id:page3

    Przepisy:
        id:page4    
    

<StartScreen>:
    name:'menu'
    
    GridLayout:
        cols: 3
        rows: 1
        row_force_default: True
        row_default_height: 70
        
        Button:
            text: 'Listy zakupów'
            on_press: root.manager.current = 'ListyZakupow'

        Button:
            text: 'Moja Lodówa'
            on_press: root.manager.current = 'MojaLodowa'

        Button:
            text: 'Przepisy'
            on_press: root.manager.current = 'Przepisy'

<ListyZakupow>:
    name: 'ListyZakupow'

    GridLayout:
        cols: 3
        rows: 1
        row_force_default: True
        row_default_height: 70
        
        
        Button:
            text: 'Listy zakupów'
            background_color: (0,1,0,1)
            on_press: root.manager.current = 'ListyZakupow'

        Button:
            text: 'Moja Lodówa'
            on_press: root.manager.current = 'MojaLodowa'
        Button:
            text: 'Przepisy'
            on_press: root.manager.current = 'Przepisy'

<MojaLodowa>:
    name: 'MojaLodowa'

    GridLayout:
        cols: 1
        rows: 2
        
        GridLayout:
            cols: 3
            rows: 1
            Button:
                text: 'Listy zakupów'
                height: 70
                on_press: root.manager.current = 'ListyZakupow'

            Button:
                text: 'Moja Lodówa'
                height: 70
                background_color: (0,1,0,1)
                on_press: root.manager.current = 'MojaLodowa'

            Button:
                text: 'Przepisy'
                height: 70
                on_press: root.manager.current = 'Przepisy'

        RV:
            id: recycle_view
                


<Przepisy>:
    name: 'Przepisy'

    GridLayout:
        cols: 3
        rows: 1
        row_force_default: True
        row_default_height: 70
        
        Button:
            text: 'Listy zakupów'
            on_press: root.manager.current = 'ListyZakupow'

        Button:
            text: 'Moja Lodówa'
            on_press: root.manager.current = 'MojaLodowa'

        Button:
            text: 'Przepisy'
            background_color: (0,1,0,1)
            on_press: root.manager.current = 'Przepisy'